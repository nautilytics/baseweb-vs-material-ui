{
  "source": ["tokens/token.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./src/style-dictionary-dist/",
      "files": [{
        "destination": "variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}
